<h2 class="mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control", required: true %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :ward, class: "form-label" %>
      <%= f.text_field :ward, class: "form-control" %>
    </div>
    <div class="col-md-4 mb-3">
      <%= f.label :post_office, class: "form-label" %>
      <%= f.text_field :post_office, class: "form-control" %>
    </div>
    <div class="col-md-4 mb-3">
      <%= f.label :upazila, class: "form-label" %>
      <%= f.text_field :upazila, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :district, class: "form-label" %>
      <%= f.text_field :district, class: "form-control" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :contact_number, class: "form-label" %>
      <%= f.telephone_field :contact_number, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :user_type, class: "form-label" %>
    <%= f.select :user_type, options_for_select([["Anonymous Citizen", "anonymous_citizen"], ["Admin", "admin"]], selected: "anonymous_citizen"), {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
        <small class="text-muted d-block mb-1">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
    </div>
  </div>

  <div class="d-grid mt-4">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
